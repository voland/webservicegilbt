@page "/index"
@using WebServiceGilBT.Shared
@using WebServiceGilBT.Data

<table class="my_custom_table">
    <tr class="my_custom_th_verydark">
        <th @onclick='(() => mkOrnungWithScreenList(cs_gmina))' class="ClickableLabel">@Lang.comune <i class="oi oi-elevator" /></th>
        <th @onclick='(() => mkOrnungWithScreenList(cs_uid))' class="ClickableLabel">Uid <i class="oi oi-elevator" /></th>
        <th @onclick='(() => mkOrnungWithScreenList(cs_name))' class="ClickableLabel">@Lang.name <i class="oi oi-elevator" /></th>
        <th @onclick='(() => mkOrnungWithScreenList(cs_type))' class="ClickableLabel">@Lang.type <i class="oi oi-elevator" /></th>
        <th @onclick='(() => mkOrnungWithScreenList(cs_resolution))' class="ClickableLabel">@Lang.resolution <i class="oi oi-elevator" /></th>
        <th @onclick='(() => mkOrnungWithScreenList(cs_lastRequest))' class="ClickableLabel">@Lang.lastRequest <i class="oi oi-elevator" /></th>
        <th @onclick='(() => mkOrnungWithScreenList(cs_ver))' class="ClickableLabel">@Lang.version <i class="oi oi-elevator" /></th>
        <th>@Lang.contrast</th>
        <th>@Lang.nightContrast</th>
        <th>@Lang.configure</th>
    </tr>

    @foreach (var screen in listaDoWyswietlania) {
        @if (user.IsScreenAccessedByUser(screen.uid)) {
            <tr class="my_custom_th @item_background">
                <td>
                    @if (screen.gmina != null) {@screen.gmina.NazwaGminy}
                </td>
                <td>@screen.uid</td>
                <td>@screen.name</td>
                <td>@screen.screen_type_str()</td>
                <td>@screen.resolution()</td>
                <td>@screen.last_request</td>
                <td>@screen.firmware_ver</td>
                <td>@screen.contrast_str()</td>
                <td>@screen.night_contrast_str()</td>
                <td>
                    <button class="btn btn-primary"
                            @onclick="(()=>NavigateToConfigureScreen(screen))">
                        @Lang.configure
                    </button>

                </td>
            </tr>
        }
    }

</table>

